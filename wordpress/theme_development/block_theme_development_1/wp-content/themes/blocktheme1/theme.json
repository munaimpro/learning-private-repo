{
    "$Schema" : "https://schemas.wp.org/wp/6.7/theme.json",
    "version" : "1.0.0",
    "settings": {
        "appearanceTools" : true
    },
    "styles" : {
        "color" : {
            "text" : "#333333",
            "background" : "#ffffff"
        },
        "elements" : {
            "heading" : {
                "typography" : {
                    "fontSize" : "30px",
                    "fontWeight" : "600",
                    "lineHeight" : "1.2"
                }
            },
            "link" : {
                ":hover" : {
                    "typography" : {
                        "color": "red",
                        "textDecoration" : "underline"
                    }
                },
                "typography" : {
                    "color" : "#333333",
                    "fontWeight" : "600",
                    "textDecoration" : "none"
                }
            }
        },
        "typography" : {
            "fontFamily" : "'Sans-Serif', Arial",
            "fontSize" : "14px",
            "fontWeight" : "400",
            "fontStyle" : "normal",
            "lineHeight" : "1.55"
        }
    },
    "templateParts" : [
        {
            "area" : "header",
            "name" : "header",
            "title" : "Header"
        },
        {
            "area" : "footer",
            "name" : "footer",
            "title" : "My Footer"
        }
    ]
}